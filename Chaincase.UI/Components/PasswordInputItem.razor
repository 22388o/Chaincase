
<IonItem class="ion-no-padding">
    <IonLabel>Password</IonLabel>
    <IonInput type='@(showPassword ? "text" : "password")'
              @bind-Value="Value"
              placeholder="e.g. margaretthatcheris110%SEXY" />
@if (showPassword)
{
    <IonIcon slot="end" name="eye" class="eye" @onclick='HideShowPassword' />
}
else
{
    <IonIcon slot="end" name="eye-off" class="eye-off" @onclick='HideShowPassword' />
}
</IonItem>

@code {
    bool showPassword;
    private string _value;

    [Parameter]
    public string Value
    {
        get => _value;
        set
        {
            if (_value == value) return;
            _value = value;
            ValueChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    private void HideShowPassword()
    {
        showPassword = !showPassword;
    }
}
